sequenceDiagram
    participant Usuario
    participant Chatbot
    participant API_Facturacion
    participant API_Pagos

    Usuario->>Chatbot: Elige "Pagos y Facturacion > Solicitar codigo o forma de pago"
    Chatbot->>Usuario: "Ingresa numero de cuenta"
    Usuario->>Chatbot: "123456"
    Chatbot->>API_Facturacion: GET /saldo?cuenta=123456
    alt Saldo pendiente
        API_Facturacion-->>Chatbot: {"saldo": 750, "moneda": "MXN"}
        Chatbot->>API_Pagos: POST /generar-pago {"monto": 750}
        API_Pagos-->>Chatbot: {"codigo_oxxo": "987654321", "clabe": "0123456789"}
        Chatbot-->>Usuario: "Saldo: $750 MXN\nğŸ”¹ OXXO: CÃ³digo *987654321*\nğŸ”¹ Transferencia: CLABE *0123456789*"
    else Sin saldo
        API_Facturacion-->>Chatbot: {"saldo": 0}
        Chatbot-->>Usuario: "No hay saldo pendiente"
    else Error
        API_Facturacion-->>Chatbot: {"error": "Servicio no disponible"}
        Chatbot-->>Usuario: "Intenta mÃ¡s tarde"
    end
